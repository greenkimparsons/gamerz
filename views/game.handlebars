<body>
  <div class="gameheader">
    <h1> Welcome Gamer! </h1>
  </div>
  <div class="card-deck">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="/images/{{image}}" alt="Game image">
      <div class="card-body">
        <p class="card-text">Share your gamer tag in the comments!</p>
      </div>
    </div>

    <div class="card">
      <div class="input-group mb-3">
        <label for="comment"> </label>
        <div class="card-body">
          <h5 class="card-title">Post Your Comment Here!</h5>
          <input type="text" class="form-control" placeholder="Comments" aria-label="Recipient's username"
            aria-describedby="button-addon2">
          <div class="input-group-append">
            <button class="btn btn-outline-dark" type="button" id="button-addon2">Post</button>
          </div>
          <p class="card-text"><small class="text-muted">Last update 3 mins ago</small></p>
        </div>
      </div>
    </div>
  </div>

  <div>
    <!-- Loop over each object in the messages array -->
    {{#each messages as |message| }}
    <div class="row mb-4 message">
      <div class="col-md-5">
        <p>Created by {{message.name}}</p>
      </div>
      <div class="col-md-7">
        <p>
          {{message.description}}
        </p>
      </div>
    </div>
    {{/each}}
  </div>

  <script src="./js/comment.js"></script>
</body>